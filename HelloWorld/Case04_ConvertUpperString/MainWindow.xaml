<Window x:Class="Case04_ConvertUpperString.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Case04_ConvertUpperString"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="500">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    
    <Grid Background="#FFFFf5d5">
        <!--Margin="52,10,0,0"-->
        <TextBox Text="{Binding String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding UpperString}" VerticalAlignment="Top" Margin="0,18,0,0"/>

    </Grid>
</Window>
